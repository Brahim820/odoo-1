<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- model.name inherit form view -->
        <record id="product_template_only_form_view_for_duplication" model="ir.ui.view">
            <field name="name">product.template.product.form.inherit.view.form.for_duplications</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="button_duplicate" string="Duplicate" type="object"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
